<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
<update handle="customer_account"/>
<body>
    <referenceBlock name="customer_address_edit">
        <action method="setTemplate">
            <argument name="template" xsi:type="string">
                Bluethinkinc_AddNewAddressField::address/edit.phtml
            </argument>
        </action>
        <arguments>
            <argument name="additional_address_data" xsi:type="object">
                Bluethinkinc\AddNewAddressField\ViewModel\GetShippingAddressData
            </argument>
        </arguments>
    </referenceBlock>
</body>
</page>
